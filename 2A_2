// WAP to accept a number and display the sum of its digits.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int number, remainder, sum=0;

    printf("Enter a number:");
    scanf("%d", &number);

    while(number>0)
    {
        remainder=number%10;
        number=number/10;
        sum=sum+remainder;
    }
    printf("The sum of the digits is:%d.", sum);
}
