// WAP to accept a number and print it in words. Input = 103, output = one zero three.
#include <stdio.h>
#include <stdlib.h>
#include<math.h>
int main()
{
    int number, number_of_digits, power=1, n, a;
    printf("Enter a number:");
    scanf("%d", &number);
    n=number;
    number_of_digits=log10(number);
    a=number_of_digits;
    while(a!=0)
    {
        power=power*10;
        a--;
    }
    while(number!=0)
    {
        a=number/power;
        switch(a)
        {
        case 0:
            printf("zero ");
            break;
        case 1:
            printf("one ");
            break;
        case 2:
            printf("two ");
            break;
        case 3:
            printf("three ");
            break;
        case 4:
            printf("four ");
            break;
        case 5:
            printf("five ");
            break;
        case 6:
            printf("six ");
            break;
        case 7:
            printf("seven ");
            break;
        case 8:
            printf("eight ");
            break;
        case 9:
            printf("nine ");
            break;
        }
        number=number%power;
        power=power/10;
    }
    while(number_of_digits!=0)
    {
        if(n%10==0)
            printf("zero ");
        n=n/10;
        number_of_digits--;
    }
}
