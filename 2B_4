// WAP to swap first and last digits of a number.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int number, first_digit, last_digit;

    printf("Enter a number:");
    scanf("%d", &number);

    last_digit=number%10;

    while(number>0)
    {
        first_digit=number%10;
        number=number/10;
    }
    first_digit=first_digit+last_digit;
    last_digit=first_digit-last_digit;
    first_digit=first_digit-last_digit;

    printf("Swapping: The first digit is:%d. The last digit is:%d.", first_digit, last_digit);
}
